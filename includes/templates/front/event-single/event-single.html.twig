{% set page = view.page|default({}) %}
{% set partials = view.partials|default({}) %}

<main{{ page.attr_string|default('')|raw }}>
    <div class="mj-member-event-single__wrapper">
        {% include 'event-single/partials/hero.html.twig' with { hero: partials.hero|default({}) } only %}

        <section class="mj-member-event-single__body">
            <div class="mj-member-event-single__main">
                {% include 'event-single/partials/description.html.twig' with { description: partials.description|default({}) } only %}

                {% if not partials.registration|default({}).is_free_participation %}
                    {% include 'event-single/partials/registration.html.twig' with {
                        registration: partials.registration|default({}),
                        user: user|default({})
                    } only %}
                {% endif %}

                {% include 'event-single/partials/location.html.twig' with { location: partials.location|default({}) } only %}

                {% include 'event-single/partials/photos.html.twig' with {
                    photos: partials.photos|default({}),
                    model: model|default({})
                } only %}
            </div>

            <aside class="mj-member-event-single__sidebar">
                {% include 'event-single/partials/sidebar-details.html.twig' with { sidebar: partials.sidebar|default({}) } only %}
                {% include 'event-single/partials/animateurs.html.twig' with {
                    animateurs: partials.animateurs|default({}),
                    assets: assets|default({})
                } only %}
            </aside>
        </section>

        {% include 'event-single/partials/cover-fallback.html.twig' with { cover: view.cover_fallback|default({}) } only %}
    </div>
</main>
