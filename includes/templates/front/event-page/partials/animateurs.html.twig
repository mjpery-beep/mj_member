{% set count = animateurs.count|default(0) %}

{% if count > 0 %}
    {% set items = animateurs.items|default([]) %}
    {% set base_url = assets.base_url|default('') %}
    {% set whatsapp_icon = assets.icons.whatsapp|default('') %}

    <section class="mj-event-page__card mj-event-page__animateurs">
        <h4 class="mj-event-page__animateurs-title">{{ __('Ã‰quipe responsable', 'mj-member') }}</h4>

        <div class="mj-event-page__animateurs-list">
            {% for animateur in items %}
                {% set classes = ['mj-event-page__animateur'] %}
                {% if animateur.is_primary|default(false) %}
                    {% set classes = classes|merge(['is-primary']) %}
                {% endif %}

                {% set avatar_url = animateur.avatar_url|default('') %}
                {% set name = animateur.name|default('') %}
                {% set initials = animateur.initials|default('#') %}
                {% set email = animateur.email|default('') %}
                {% set phone = animateur.phone|default('') %}
                {% set whatsapp_link = animateur.whatsapp_link|default('') %}
                {% set role_label = animateur.role_label|default(__('Animateur', 'mj-member')) %}
                {% set has_contact = email or phone or whatsapp_link %}

                <article class="{{ classes|join(' ') }}">
                    {# Avatar #}
                    <span class="mj-event-page__animateur-avatar">
                        {% if avatar_url %}
                            <img src="{{ avatar_url|esc_url }}" alt="{{ name|esc_attr }}" loading="lazy" decoding="async" />
                        {% else %}
                            {{ initials }}
                        {% endif %}
                    </span>

                    {# Informations #}
                    <div class="mj-event-page__animateur-content">
                        {% if name %}
                            <p class="mj-event-page__animateur-name">{{ name }}</p>
                        {% endif %}

                        {% if role_label %}
                            <p class="mj-event-page__animateur-role">
                                <span class="mj-event-page__animateur-badge">{{ role_label }}</span>
                            </p>
                        {% endif %}

                        {# Liens de contact #}
                        {% if has_contact %}
                            <ul class="mj-event-page__animateur-contact">
                                {% if email %}
                                    <li>
                                        <a href="mailto:{{ email|esc_attr }}" title="{{ __('Envoyer un email', 'mj-member') }}" class="mj-event-page__contact-btn mj-event-page__contact-btn--email">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                                <rect width="20" height="16" x="2" y="4" rx="2"/>
                                                <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"/>
                                            </svg>
                                            <span class="screen-reader-text">{{ __('Envoyer un email', 'mj-member') }}</span>
                                        </a>
                                    </li>
                                {% endif %}
                                {% if phone %}
                                    {% set phone_uri = phone|replace({' ': '', '.': '', '-': '', '(': '', ')': ''}) %}
                                    <li>
                                        <a href="tel:{{ phone_uri|esc_attr }}" title="{{ __('Appeler', 'mj-member') }}" class="mj-event-page__contact-btn mj-event-page__contact-btn--phone">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                                <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/>
                                            </svg>
                                            <span class="screen-reader-text">{{ __('Appeler', 'mj-member') }}</span>
                                        </a>
                                    </li>
                                {% endif %}
                                {% if whatsapp_link %}
                                    <li>
                                        <a href="{{ whatsapp_link|esc_url }}" target="_blank" rel="noopener" title="{{ __('WhatsApp', 'mj-member') }}" class="mj-event-page__contact-btn mj-event-page__contact-btn--whatsapp">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
                                                <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
                                            </svg>
                                            <span class="screen-reader-text">{{ __('Contacter via WhatsApp', 'mj-member') }}</span>
                                        </a>
                                    </li>
                                {% endif %}
                            </ul>
                        {% endif %}
                    </div>
                </article>
            {% endfor %}
        </div>
    </section>
{% endif %}
